{
  "manifest_version": 3,
  "name": "Netflix Critic",
  "version": "0.0.1",
  "author": "Abdulah Sibalo",
  "description": "An extension to add ratings data to the Netflix user interface.",
  "icons": {"16": "assets/netflix_logo.png",
            "48": "assets/netflix_logo.png",
            "128": "assets/netflix_logo.png" },
  "permissions": [
    "tabs",
    "storage",
    "management"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "*://*.netflix.com/*"
    ],
    "js": ["content.js"],
    "runs_at": "document_start"
  }],
  "commands": {
    "Ctrl+M": {
        "suggested_key": {
            "default": "Ctrl+M",
            "mac": "Command+M"
        },
        "description": "Ctrl+M."
    }
  }
}